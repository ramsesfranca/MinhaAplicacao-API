@model IEnumerable<MinhaAplicacao_Cliente.Models.PedidoModel>

<h4>Pedidos</h4>

<p>
    <a asp-action="Adicionar">Novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Comanda.Codigo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cardapio.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cardapio.Preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataHoraCadastro)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Comanda.Codigo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cardapio.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cardapio.Preco)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataHoraCadastro)
                </td>
            </tr>
        }
    </tbody>
</table>
