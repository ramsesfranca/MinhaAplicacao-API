@model MinhaAplicacao_Cliente.Models.PedidoModel

<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-group">
    <label asp-for="ComandaId" class="control-label"></label>
    <select asp-for="ComandaId" asp-items="@Model.SelectComandas" class="form-control">
        <option>Selecione</option>
    </select>
    <span asp-validation-for="ComandaId" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="CardapioId" class="control-label"></label>
    <select asp-for="CardapioId" asp-items="@Model.SelectCardapios" class="form-control">
        <option>Selecione</option>
    </select>
    <span asp-validation-for="CardapioId" class="text-danger"></span>
</div>
<div class="form-group">
    <input type="submit" value="Salvar" class="btn btn-primary" />
</div>
